<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add a new item</a>
    <ul>
        <% pantry.forEach((food) => { %>
         <li>
            <a href="/users/<%= user._id %>/foods/<%= food._id %>"><%= food.food %></a>
            <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
            <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="post">
                <button>Delete</button>
            </form>
         </li>
        <% }) %>
    </ul>
</body>
</html>